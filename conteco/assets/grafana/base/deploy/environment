#!/usr/bin/env bash

# this file contains the default settings
# scaling parameters are applied after loading defaults

# GLOBAL REPLACEMENTS
DOLLAR='$'
export CONTECO_DC_GLOBAL='$CONTECO_DC_GLOBAL_SERVICE_NAME,$CONTECO_DC_GLOBAL_IMAGE_NAME,$CONTECO_DC_GLOBAL_ENVIRONMENT'
export CONTECO_DC_GLOBAL_SERVICE_NAME="${CONTECO_TYPE}"
export CONTECO_DC_GLOBAL_IMAGE_NAME="${CONTECO_TYPE}.${CONTECO_NAME}:${CONTECO_TAG}"
export CONTECO_DC_GLOBAL_ENVIRONMENT="\
'GF_LOG_FORMAT=json', \
'GF_LOG_FILE_FORMAT=json', \
'GF_LOG_CONSOLE_FORMAT=json', \
'GF_LOG_SYSLOG_FORMAT=json', \
'GF_LOG_LEVEL=warn', \
'GF_SERVER_ROOT_URL=${DOLLAR}{CONTECO_DC_GRAFANA_ENV_GF_SERVER_ROOT_URL}'"

# SERVICE REPLACEMENTS
export CONTECO_DC_GRAFANA_ENV_GF_SERVER_ROOT_URL=""
export CONTECO_DC_GRAFANA_COMMAND=
export CONTECO_DC_GRAFANA_VOLUMES=
export CONTECO_DC_GRAFANA_PORTS="3000:3000"
export CONTECO_DC_GRAFANA_NETWORKS="${CONTECO_ECOSYSTEM}_overlay"
export CONTECO_DC_GRAFANA_DEPLOY=
