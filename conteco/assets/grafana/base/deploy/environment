#!/usr/bin/env bash

# GLOBAL REPLACEMENTS
DOLLAR='$'
export CONTECO_DC_GLOBAL='$CONTECO_DC_GLOBAL_SERVICE_NAME,$CONTECO_DC_GLOBAL_IMAGE_NAME,$CONTECO_DC_GRAFANA_ENVIRONMENT,$CONTECO_DC_GRAFANA_COMMAND,$CONTECO_DC_GRAFANA_VOLUMES'
export CONTECO_DC_GLOBAL_SERVICE_NAME="${CONTECO_TYPE}"
export CONTECO_DC_GLOBAL_IMAGE_NAME="${CONTECO_TYPE}.${CONTECO_NAME}:${CONTECO_TAG}"
export CONTECO_DC_GRAFANA_ENVIRONMENT="\
'GF_LOG_FORMAT=json', \
'GF_LOG_FILE_FORMAT=json', \
'GF_LOG_CONSOLE_FORMAT=json', \
'GF_LOG_SYSLOG_FORMAT=json', \
'GF_LOG_LEVEL=warn', \
'GF_SERVER_ROOT_URL=${DOLLAR}{CONTECO_DC_GRAFANA_ENV_GF_SERVER_ROOT_URL}'"
export CONTECO_DC_GRAFANA_COMMAND=
export CONTECO_DC_GRAFANA_VOLUMES="'${DOLLAR}{CONTECO_DC_GRAFANA_VOLUME_NAME}:/var/lib/grafana'"

# START VARIABLES grafana.base
export CONTECO_DC_GRAFANA_PORTS="3000:3000"
export CONTECO_DC_GRAFANA_NETWORKS="${CONTECO_ECOSYSTEM}_overlay"
export CONTECO_DC_GRAFANA_DEPLOY=
export CONTECO_DC_GRAFANA_ENV_GF_SERVER_ROOT_URL=""
export CONTECO_DC_GRAFANA_VOLUME_NAME="${CONTECO_ECOSYSTEM}_${CONTECO_TYPE}_volume"
# END VARIABLES grafana.base

# START GLOBAL VARIABLES
export CONTECO_DC_GLOBAL_VOLUMES="${CONTECO_DC_GRAFANA_VOLUME_NAME}: {}"
export CONTECO_DC_GLOBAL_NETWORKS="${CONTECO_DC_GRAFANA_NETWORKS}: { external: true }"
# END GLOBAL VARIABLES
