#!/usr/bin/env bash

# GLOBAL REPLACEMENTS
DOLLAR='$'
export CONTECO_DC_GLOBAL='$CONTECO_DC_GLOBAL_SERVICE_NAME,$CONTECO_DC_GLOBAL_IMAGE_NAME,$CONTECO_DC_GRAFANA_ENVIRONMENT,$CONTECO_DC_GRAFANA_COMMAND,$CONTECO_DC_GRAFANA_VOLUMES,$CONTECO_DC_GRAFANA_DEPLOY_MODE,$CONTECO_DC_GRAFANA_DEPLOY_REPLICAS'
export CONTECO_DC_GLOBAL_SERVICE_NAME="${CONTECO_TYPE}"
export CONTECO_DC_GLOBAL_IMAGE_NAME="${CONTECO_TYPE}.${CONTECO_NAME}:${CONTECO_TAG}"
export CONTECO_DC_GRAFANA_ENVIRONMENT="\
'GF_LOG_FORMAT=json', \
'GF_LOG_FILE_FORMAT=json', \
'GF_LOG_CONSOLE_FORMAT=json', \
'GF_LOG_SYSLOG_FORMAT=json', \
'GF_LOG_LEVEL=warn', \
'GF_SERVER_ROOT_URL=${DOLLAR}{CONTECO_DC_GRAFANA_ENVIRONMENT_GF_SERVER_ROOT_URL}'"
export CONTECO_DC_GRAFANA_COMMAND=
export CONTECO_DC_GRAFANA_VOLUMES="'${DOLLAR}{CONTECO_DC_GRAFANA_VOLUMES_NAME}:/var/lib/grafana'"
export CONTECO_DC_GRAFANA_DEPLOY_MODE="replicated"
export CONTECO_DC_GRAFANA_DEPLOY_REPLICAS="1"

# START VARIABLES grafana.base
export CONTECO_DC_GRAFANA_PORTS="3000:3000"
export CONTECO_DC_GRAFANA_NETWORKS="${CONTECO_ECOSYSTEM}_overlay"
export CONTECO_DC_GRAFANA_ENVIRONMENT_GF_SERVER_ROOT_URL=""
export CONTECO_DC_GRAFANA_VOLUMES_NAME="${CONTECO_ECOSYSTEM}_grafana_volume"
export CONTECO_DC_GRAFANA_DEPLOY_RESOURCES_LIMITS_CPUS="0.75"
export CONTECO_DC_GRAFANA_DEPLOY_RESOURCES_RESERVATIONS_CPUS="0.05"
export CONTECO_DC_GRAFANA_DEPLOY_RESOURCES_LIMITS_MEMORY="256m"
export CONTECO_DC_GRAFANA_DEPLOY_RESOURCES_RESERVATIONS_MEMORY="128m"
# END VARIABLES grafana.base

# START GLOBAL VARIABLES
export CONTECO_DC_GLOBAL_VOLUMES="${CONTECO_DC_GRAFANA_VOLUMES_NAME}: {}"
export CONTECO_DC_GLOBAL_NETWORKS="${CONTECO_DC_GRAFANA_NETWORKS}: { external: true }"
# END GLOBAL VARIABLES
