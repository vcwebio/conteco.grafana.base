#!/usr/bin/env bash

# START CONFIGURATION
DOLLAR='$'
export CONTECO_DC_GLOBAL_STACKS="grafana.base"
export CONTECO_DC_GLOBAL_STACKNAMES="grafana"
export CONTECO_DC_GLOBAL_BOOTSTACKS=""
export CONTECO_DC_GLOBAL_RUNSTACKS="grafana"
export CONTECO_DC_GLOBAL_VOLUME_LIST="grafana_volume"
export CONTECO_DC_GLOBAL='$CONTECO_DC_GLOBAL_SERVICE_NAME,$CONTECO_DC_GLOBAL_IMAGE_NAME,$CONTECO_DC_GRAFANA_ENVIRONMENT,$CONTECO_DC_GRAFANA_COMMAND,$CONTECO_DC_GRAFANA_PORTS,$CONTECO_DC_GRAFANA_NETWORKS,$CONTECO_DC_GRAFANA_DEPLOY_MODE,$CONTECO_DC_GLOBAL_NETWORKS'
# END CONFIGURATION

# START GLOBAL SETTINGS
export CONTECO_DC_GLOBAL_SERVICE_NAME="${CONTECO_TYPE}"
export CONTECO_DC_GLOBAL_IMAGE_NAME="${CONTECO_TYPE}.${CONTECO_NAME}:${CONTECO_TAG}"
export CONTECO_DC_GRAFANA_ENVIRONMENT="\
'GF_LOG_FORMAT=json', \
'GF_LOG_FILE_FORMAT=json', \
'GF_LOG_CONSOLE_FORMAT=json', \
'GF_LOG_SYSLOG_FORMAT=json', \
'GF_LOG_LEVEL=warn', \
GF_SERVER_ROOT_URL=/${DOLLAR}{CONTECO_TYPE}/grafana"
export CONTECO_DC_GRAFANA_COMMAND=
export CONTECO_DC_GRAFANA_PORTS=
export CONTECO_DC_GRAFANA_NETWORKS="${DOLLAR}{CONTECO_TYPE}_overlay"
export CONTECO_DC_GRAFANA_DEPLOY_MODE="replicated"
export CONTECO_DC_GLOBAL_NETWORKS="${DOLLAR}{CONTECO_TYPE}_overlay: { external: true }"
# END GLOBAL SETTINGS

# START SETTINGS grafana.base
export CONTECO_DC_GRAFANA_VOLUMES="'${CONTECO_TYPE}_grafana_volume:/var/lib/grafana'"
export CONTECO_DC_GRAFANA_DEPLOY_LABELS=
export CONTECO_DC_GRAFANA_DEPLOY_RESOURCES_LIMITS_CPUS="0.75"
export CONTECO_DC_GRAFANA_DEPLOY_RESOURCES_RESERVATIONS_CPUS="0.01"
export CONTECO_DC_GRAFANA_DEPLOY_RESOURCES_LIMITS_MEMORY="128m"
export CONTECO_DC_GRAFANA_DEPLOY_RESOURCES_RESERVATIONS_MEMORY="64m"
# END SETTINGS grafana.base

# START TOPLEVEL SETTINGS
export CONTECO_DC_GLOBAL_VOLUMES="${CONTECO_TYPE}_grafana_volume: { external: true }"
# END TOPLEVEL SETTINGS
